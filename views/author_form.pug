extends layout

block content
  h1 添加作者

  form(method='POST' action='')
    div.form-group
      label(for='family_name') 姓:
      input#family_name.form-control(type='text' placeholder='严' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
      label(for='first_name') 名字:
      input#first_name.form-control(type='text' placeholder='歌苓' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      div.form-group
      label(for='date_of_birth') 出生年月
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
    button.btn.btn-primary(type='submit') 提交
  if errors 
    ul
      for error in errors
        li!= error.msg