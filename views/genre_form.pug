extends layout

block content
  h1 添加分类

  form(method='POST' action='')
    div.form-group
      label(for='name') 种类:
      input#name.form-control(type='text', placeholder='玄幻 纪实 等' name='name' value=(undefined===genre ? '' : genre.name))
    button.btn.btn-primary(type='submit') 提交

  if errors 
    ul
      for error in errors
        li!= error.msg